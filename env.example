# ============================================================================
# ROOT ENV.EXAMPLE - Master template for all environment variables
# ============================================================================
# This file documents ALL environment variables used across the project.
# 
# For actual setup:
# - Backend: Copy to backend/.env and fill in values
# - Frontend: Copy to frontend/.env.local and fill in values
#
# See also:
# - backend/.env.example (backend-specific)
# - frontend/.env.example (frontend-specific)
# ============================================================================

# ============================================================================
# Supabase Database Configuration (REQUIRED - Backend)
# ============================================================================
# Get your connection string from: Supabase Dashboard → Settings → Database
# Select "Connection string" → "URI" tab
# Format: postgresql://postgres.[PROJECT_REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres
DATABASE_URL=postgresql://postgres.[PROJECT_REF]:[YOUR-PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres
# SSL is required for Supabase (enabled by default)
DB_SSL=true

# ============================================================================
# Supabase API Keys (Optional - Frontend & Backend)
# ============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ============================================================================
# Backend Server Configuration
# ============================================================================
PORT=3001
NODE_ENV=development
JWT_SECRET=your_jwt_secret_key_change_this_in_production

# ============================================================================
# Frontend Configuration
# ============================================================================
NEXT_PUBLIC_BACKEND_URL=http://localhost:3001
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# ============================================================================
# Email Configuration (Gmail SMTP) - Backend & Frontend
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=hirebitapplications@gmail.com
SMTP_PASS=your_app_specific_password

# ============================================================================
# IMAP Configuration (for reading emails) - Backend only
# ============================================================================
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=hirebitapplications@gmail.com
IMAP_PASS=your_app_specific_password
IMAP_SECURE=true
IMAP_POLL_MS=10000
ENABLE_EMAIL_READER=false

# ============================================================================
# AI Configuration (Gemini API) - Backend only
# ============================================================================
GEMINI_API_KEY=AIzaSyAVB1-3g8umuSxaLD5STEqpWV5No5LEl_o
GEMINI_API_KEY_002=your_gemini_api_key_002
GEMINI_API_KEY_003=your_gemini_api_key_003
REPORT_AI_MODEL=gemini-2.0-flash
SCORING_MODEL=gemini-2.0-flash
RESUME_PARSER_MODEL=gemini-2.0-flash

# ============================================================================
# Webhook Configuration (N8N) - Backend only
# ============================================================================
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/company-details
N8N_INCOMING_WEBHOOK_URL=https://your-n8n-instance.com/webhook/incoming-data
PUBLIC_API_BASE_URL=http://localhost:3001

# ============================================================================
# Cron/Security Configuration - Backend only
# ============================================================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Or: openssl rand -hex 32
CRON_SECRET=your_cron_secret_key_here

# ============================================================================
# Feature Flags - Backend only
# ============================================================================
DISABLE_REPORT_SCHEDULER=false

# ============================================================================
# Storage Configuration (Optional) - Backend only
# ============================================================================
# For Supabase Storage (S3-compatible):
# Get credentials from: Supabase Dashboard → Settings → API → Storage
# Format: https://[PROJECT_REF].storage.supabase.co/storage/v1/s3
S3_BUCKET=resumes
S3_ACCESS_KEY=your-access-key-id
S3_SECRET_KEY=your-secret-access-key
S3_ENDPOINT=https://[PROJECT_REF].storage.supabase.co/storage/v1/s3
S3_REGION=us-east-1
S3_BUCKET_URL=https://[PROJECT_REF].storage.supabase.co/storage/v1/object/public/resumes
PDF_BUCKET_URL=https://[PROJECT_REF].storage.supabase.co/storage/v1/object/public/resumes
PDF_BUCKET_KEY=your-bucket-key
FILE_STORAGE_DIR=./storage
